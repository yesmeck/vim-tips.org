<%= form_for(@tip, :html => {:class => 'form-horizontal well'}) do |f| %>
  <% if @tip.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <a class="close" data-dismiss="alert" href="#">Ã—</a>
      <h4 class="alert-heading">Oh snap!</h4>
      <ul>
      <% @tip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= f.label 'Tip*', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :content, :class => 'input-xlarge', :rows => 3, :cols => nil%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :twitter_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :twitter_id %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :url, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :url %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit :value => 'Post', :class => 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>
